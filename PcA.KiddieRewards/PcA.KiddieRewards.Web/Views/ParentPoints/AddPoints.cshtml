@using System.Linq
@model AddPointsViewModel
@{
    ViewData["Title"] = "Ajouter des points";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <div>
            <p class="text-muted mb-1">Gestion des points</p>
            <h1 class="h3 mb-0">Ajouter des points</h1>
        </div>
        <div class="ms-auto">
            <a class="btn btn-outline-secondary" asp-controller="ParentDashboard" asp-action="Dashboard">Retour au tableau de bord</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form asp-action="AddPoints" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Enfants concernés</label>

                    @if (Model.AvailableChildren.Any())
                    {
                        <div class="row g-2">
                            @for (var i = 0; i < Model.AvailableChildren.Count; i++)
                            {
                                var child = Model.AvailableChildren[i];
                                var inputId = $"child-{i}";
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="ChildMemberIds" value="@child.Id" id="@inputId" @(Model.ChildMemberIds.Contains(child.Id) ? "checked" : string.Empty) />
                                        <label class="form-check-label" for="@inputId">@child.DisplayName</label>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            Aucun enfant actif n'est disponible pour cette famille.
                        </div>
                    }

                    <span asp-validation-for="ChildMemberIds" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Type" class="form-label">Type de points</label>
                        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<PointEntryType>()"></select>
                        <div class="form-text">
                            Bon point / Bonus : valeur positive. Mauvais point : valeur négative. Récompense : valeur négative pour consommer les bons points. Reset calcule automatiquement le montant nécessaire pour revenir à 0.
                        </div>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Points" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">±</span>
                            <input asp-for="Points" class="form-control" type="number" />
                        </div>
                        <div class="form-text">Le signe sera ajusté selon le type choisi et la valeur saisie sera toujours considérée en absolu. Pour un reset, la valeur sera remplacée automatiquement.</div>
                        <span asp-validation-for="Points" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Reason" class="form-label"></label>
                    <textarea asp-for="Reason" class="form-control" rows="3" placeholder="Motif détaillé"></textarea>
                    <div class="form-text">Cette information sera visible dans l'historique.</div>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <div class="d-flex align-items-center mt-4">
                    <button type="submit" class="btn btn-primary">Valider</button>
                    <a class="btn btn-outline-secondary ms-2" asp-controller="ParentDashboard" asp-action="Dashboard">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
