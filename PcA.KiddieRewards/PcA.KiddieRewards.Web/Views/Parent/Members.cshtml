@{
    ViewData["Title"] = "Membres de la famille";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <div>
            <p class="text-muted mb-1">Accès & rôles</p>
            <h1 class="h3 mb-0">Membres</h1>
        </div>
        <div class="ms-auto">
            <button class="btn btn-primary">Inviter un membre</button>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex align-items-center">
                    <h5 class="mb-0">Liste des membres</h5>
                    <span class="badge bg-light text-body ms-auto">4 membres</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Rôle</th>
                                    <th>PIN</th>
                                    <th>Statut</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="fw-semibold">Sarah</td>
                                    <td><span class="badge bg-primary">Parent</span></td>
                                    <td><code>•••• 1234</code></td>
                                    <td><span class="badge bg-success">Actif</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-outline-secondary btn-sm">Restreindre</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold">Alex</td>
                                    <td><span class="badge bg-info text-dark">Parent invité</span></td>
                                    <td><code>•••• 5678</code></td>
                                    <td><span class="badge bg-warning text-dark">En attente</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-outline-primary btn-sm">Relancer</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold">Léa</td>
                                    <td><span class="badge bg-secondary">Enfant</span></td>
                                    <td><code>•••• 2468</code></td>
                                    <td><span class="badge bg-success">Actif</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-outline-secondary btn-sm">Réinitialiser</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold">Noah</td>
                                    <td><span class="badge bg-secondary">Enfant</span></td>
                                    <td><code>•••• 1357</code></td>
                                    <td><span class="badge bg-success">Actif</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-outline-secondary btn-sm">Réinitialiser</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 d-flex align-items-center">
                    <div class="text-muted small">Chaque PIN doit rester unique dans la famille.</div>
                    <div class="ms-auto">
                        <button class="btn btn-outline-primary btn-sm">Synchroniser</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Nouvelle invitation</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Adresse email</label>
                            <input type="email" class="form-control" placeholder="parent@example.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Rôle</label>
                            <select class="form-select">
                                <option>Parent</option>
                                <option>Parent invité</option>
                                <option>Enfant (lecture seule)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Code PIN</label>
                            <input type="text" class="form-control" placeholder="4 à 6 chiffres">
                            <div class="form-text">Le PIN est hashé et reste unique.</div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Envoyer l'invitation</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Journal d'accès</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex align-items-center">
                            <div>
                                <div class="fw-semibold">Connexion Sarah</div>
                                <div class="text-muted small">Aujourd'hui, 08:12</div>
                            </div>
                            <span class="badge bg-success ms-auto">Ok</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <div>
                                <div class="fw-semibold">Essai PIN Léa</div>
                                <div class="text-muted small">Hier, 19:40</div>
                            </div>
                            <span class="badge bg-warning text-dark ms-auto">2 tentatives</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <div>
                                <div class="fw-semibold">Invitation Alex</div>
                                <div class="text-muted small">03/06/2024</div>
                            </div>
                            <span class="badge bg-secondary ms-auto">En attente</span>
                        </li>
                    </ul>
                </div>
                <div class="card-footer bg-white border-0 text-muted small">
                    Conseil : on peut prévoir un rafraîchissement AJAX du journal sans rechargement complet.
                </div>
            </div>
        </div>
    </div>
</div>
