@{
    ViewData["Title"] = "Détails de l'enfant";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="avatar rounded-circle bg-primary-subtle text-primary fw-bold me-3" style="width:56px;height:56px;display:grid;place-items:center;">L</div>
            <div>
                <p class="text-muted mb-1">Suivi individuel</p>
                <h1 class="h3 mb-0">Léa • 10 ans</h1>
            </div>
        </div>
        <div class="ms-auto d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="ParentDashboard" asp-action="Dashboard">Retour</a>
            <a class="btn btn-primary" asp-controller="ParentPoints" asp-action="AddPoints">Ajouter des points</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <p class="text-muted mb-1">Totaux</p>
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="fw-semibold">Points positifs</div>
                            <div class="text-success h4 mb-0">+92</div>
                        </div>
                        <div>
                            <div class="fw-semibold">Points négatifs</div>
                            <div class="text-danger h4 mb-0">-18</div>
                        </div>
                        <div class="text-center">
                            <div class="fw-semibold">Net</div>
                            <div class="h4 mb-0">+74</div>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height:8px;">
                        <div class="progress-bar bg-success" style="width: 80%;"></div>
                        <div class="progress-bar bg-danger" style="width: 20%;"></div>
                    </div>
                    <small class="text-muted d-block mt-2">Inclut uniquement les lignes actives.</small>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Points récents</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <span class="badge bg-success-subtle text-success me-2">+3</span>
                        <div>
                            <div class="fw-semibold">Aide ménagère</div>
                            <div class="text-muted small">Il y a 2 jours</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <span class="badge bg-success-subtle text-success me-2">+1</span>
                        <div>
                            <div class="fw-semibold">Lecture</div>
                            <div class="text-muted small">Dimanche soir</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-danger-subtle text-danger me-2">-1</span>
                        <div>
                            <div class="fw-semibold">Conflit fratrie</div>
                            <div class="text-muted small">Semaine passée</div>
                        </div>
                    </div>
                    <div class="small text-muted mt-3">Astuce : un simple appel AJAX peut permettre de basculer le statut d'une entrée.</div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex align-items-center">
                    <h5 class="mb-0">Rappels</h5>
                    <span class="badge bg-primary ms-auto">3</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                            <span>Révision hebdo</span>
                            <span class="badge bg-warning text-dark">À faire</span>
                        </li>
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                            <span>Validation parentale</span>
                            <span class="badge bg-success">Validé</span>
                        </li>
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                            <span>Note interne</span>
                            <span class="badge bg-secondary">Privé</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex align-items-center">
                    <div>
                        <p class="text-muted mb-1">Historique complet</p>
                        <h5 class="mb-0">Lignes de points</h5>
                    </div>
                    <div class="ms-auto d-flex gap-2">
                        <button class="btn btn-sm btn-outline-secondary">Filtrer</button>
                        <button class="btn btn-sm btn-outline-primary">Exporter</button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Motif</th>
                                    <th>Points</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Devoirs terminés</td>
                                    <td><span class="badge bg-success-subtle text-success">+5</span></td>
                                    <td>05/06/2024</td>
                                    <td><span class="badge bg-success">Validé</span></td>
                                    <td class="text-end">
                                        <a class="btn btn-outline-primary btn-sm" asp-controller="ParentPoints" asp-action="AddPoints">Corriger</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Conflit fratrie</td>
                                    <td><span class="badge bg-danger-subtle text-danger">-2</span></td>
                                    <td>04/06/2024</td>
                                    <td><span class="badge bg-warning text-dark">À revoir</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-outline-secondary btn-sm">Archiver</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Aide aux tâches ménagères</td>
                                    <td><span class="badge bg-success-subtle text-success">+3</span></td>
                                    <td>03/06/2024</td>
                                    <td><span class="badge bg-success">Validé</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-outline-secondary btn-sm">Archiver</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Retard au coucher</td>
                                    <td><span class="badge bg-danger-subtle text-danger">-1</span></td>
                                    <td>01/06/2024</td>
                                    <td><span class="badge bg-secondary">Archivé</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-outline-secondary btn-sm">Restaurer</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 d-flex align-items-center">
                    <div class="text-muted small">Affichage des lignes actives et archivées.</div>
                    <div class="ms-auto">
                        <nav aria-label="Pagination enfant">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled"><span class="page-link">Préc.</span></li>
                                <li class="page-item active"><span class="page-link">1</span></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Suiv.</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
