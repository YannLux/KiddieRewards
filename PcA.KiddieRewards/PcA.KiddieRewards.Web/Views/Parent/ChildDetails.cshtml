@model ChildDetailsPageViewModel
@{
    ViewData["Title"] = "Gestion des enfants";
    var isEdit = Model.IsEditMode;
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <div>
            <p class="text-muted mb-1">Gestion des profils enfant</p>
            <h1 class="h3 mb-0">Enfants de la famille</h1>
        </div>
        <div class="ms-auto d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="ParentDashboard" asp-action="Dashboard">Retour au tableau de bord</a>
            <a class="btn btn-primary" asp-controller="ParentPoints" asp-action="AddPoints">Attribuer des points</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 d-flex align-items-center">
                    <h5 class="mb-0">Enfants enregistrés</h5>
                    <span class="badge bg-light text-body ms-auto">@Model.Children.Count enfant(s)</span>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Children.Any())
                    {
                        <div class="p-4 text-center text-muted">Aucun enfant n'est encore enregistré pour cette famille.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Avatar</th>
                                        <th>Statut</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var child in Model.Children)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@child.DisplayName</td>
                                            <td><code>@child.AvatarKey</code></td>
                                            <td>
                                                @if (child.IsActive)
                                                {
                                                    <span class="badge bg-success">Actif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactif</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-outline-primary btn-sm" asp-action="ChildDetails" asp-route-editId="@child.Id">Modifier</a>
                                                    <form class="d-inline" asp-action="ToggleChild" asp-route-id="@child.Id" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="isActive" value="@(!child.IsActive)" />
                                                        <button type="submit" class="btn btn-outline-secondary btn-sm">
                                                            @(child.IsActive ? "Désactiver" : "Réactiver")
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer bg-white border-0 text-muted small">
                    Les PIN restent uniques dans la famille et sont toujours stockés de manière sécurisée (hashés).
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex align-items-center">
                    <div>
                        <p class="text-muted mb-1">@((isEdit ? "Mise à jour" : "Création"))</p>
                        <h5 class="mb-0">@((isEdit ? "Modifier l'enfant" : "Ajouter un enfant"))</h5>
                    </div>
                    @if (isEdit)
                    {
                        <a class="btn btn-sm btn-outline-secondary ms-auto" asp-action="ChildDetails">Annuler</a>
                    }
                </div>
                <div class="card-body">
                    <form method="post" asp-action="@(isEdit ? "UpdateChild" : "CreateChild")" asp-route-id="@(isEdit ? Model.EditingChildId : null)">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="Form.DisplayName"></label>
                            <input class="form-control" asp-for="Form.DisplayName" />
                            <span class="text-danger" asp-validation-for="Form.DisplayName"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="Form.AvatarKey"></label>
                            <input class="form-control" asp-for="Form.AvatarKey" placeholder="ex: panda, lion..." />
                            <span class="text-danger" asp-validation-for="Form.AvatarKey"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="Form.Pin">PIN @if (isEdit) { <small class="text-muted">(optionnel pour mettre à jour)</small> } else { <small class="text-muted">(requis)</small> }</label>
                            <input class="form-control" asp-for="Form.Pin" type="password" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="Form.Pin"></span>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" asp-for="Form.IsActive" />
                            <label class="form-check-label" asp-for="Form.IsActive">Enfant actif</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">@((isEdit ? "Enregistrer les modifications" : "Créer l'enfant"))</button>
                            <p class="small text-muted mb-0">Le PIN doit contenir entre 4 et 10 caractères numériques.</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
